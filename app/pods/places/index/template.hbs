<div class="container dashboard">
  DASHBOARD
</div>
<div class="row">
  <div class="container">
    <div class="col-sm-6 col-md-6 col-lg-6">
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th>location</th>
            </tr>
          </thead>
          <tbody>
          {{#each place in model}}
            <tr>
              <td class="primary">
                {{#link-to 'place' place}}
                  {{place.name}}
                {{/link-to}}
              </td>
              <td>
                {{place.location}}
              </td>
              <td>
                <a href="#" {{action "delete" place}} class="btn btn-sm btn-danger">Delete</a>
              </td>
            </tr>
          {{/each}}
            <td>
              {{link-to "NEW" "places.new" class="btn btn-primary new"}}
            </td>
          </tbody>
        </table>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6">
      {{location-map  markers=model
                      centerLat=centerLat
                      centerLng=centerLng
                      zoom=zoom}}
    </div>
  </div>
</div>
